
<div class="main">
  <div class="container user-form">
    <p class="title">Login</p>
    <p class="sub-title">ログイン</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, "メールアドレス"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"  ,class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :ユーザーネーム %><br />
          <%= f.text_field :username, autofocus: true,class:"form-control"  %>
        </div>
        <div class="form-group">
          <%= f.label :password ,"パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password",class:"form-control"  %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me,"私を覚える" %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "ログインする",class: "btn btn-primary"%>
        </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div> 
