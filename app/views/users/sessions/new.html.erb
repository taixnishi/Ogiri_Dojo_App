<header>
      <ul class="nav nav-tabs">
          <li class="nav-item">
            <%=link_to "大喜利道場", root_path, class: "nav-link", tabindex: "-1" %>
          </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "ギャラリー", themes_path, class: "nav-link", tabindex: "-1" %>
          </li>
          <li class="nav-item">
            <%= link_to "お題作成", new_theme_path, class: "nav-link", tabindex: "-1" %>
          </li>
          <li class="nav-item">
            <%= link_to "マイページ", user_path(current_user.id), class: "nav-link", tabindex: "-1" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link", tabindex: "-1" %>
          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path, class: "nav-link", tabindex: "-1" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class: "nav-link active", tabindex: "-1" %>
          </li>
        <% end %>
      </ul>
</header>



<div class="main">
  <div class="container">
    <h2>ユーザーログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        
        <%= f.label :email, "メールアドレス"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :ユーザーネーム %><br />
        <%= f.text_field :username, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password ,"パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me,"私を覚える" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログインする" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div> 
</div>