

<div class="themes-edit main">
  <div class="themes-edit container">
    <p>投稿フォーム</p>
    <%= form_with model: @theme, url: { action: :update }, class: "new_list", local: true do |f| %>
      <% if @theme.errors.any? %>
        <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
      <% end %>
      <%= f.label :content , "お題"%>
      <%= f.text_area :content, autofocus: true, class: "form-control listName", placeholder: "入力してください" %>
      <div class="field">
        <%= f.label :image, "画像送信" %>
        <%= f.file_field :image %>
      </div>
      <div class="text-center"><%= f.submit "作成", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>